= form_for @hk_public_holiday do |f|
  -if @hk_public_holiday.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hk_public_holiday.errors.count, "error")} prohibited this hk_public_holiday from being saved:"
      %ul
        - @hk_public_holiday.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :year
    = f.text_field :year
  .field
    = f.label :date
    = f.date_select :date
  .actions
    = f.submit 'Save'
